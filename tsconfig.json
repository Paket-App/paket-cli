{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true
  }
}
